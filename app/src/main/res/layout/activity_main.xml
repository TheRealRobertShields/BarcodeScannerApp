<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0087AF"
    tools:context=".MainActivity"
    android:id="@+id/main_layout">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoFocusButtonColor="#00BCD4"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="#FFC107"
        app:flashButtonVisible="true"
        app:maskColor="#99000000"
        app:frameSize="0.9"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="0.25"/>

    <TextView
        android:id="@+id/currentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/scan_something"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_goToViewData"
        android:background="#002B9A"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:onClick="goToViewData"
        android:text="@string/view_data"
        android:textSize="20sp"
        android:textColor="#0087AF" />

</RelativeLayout>